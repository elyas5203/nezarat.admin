# .htaccess
RewriteEngine On

# جلوگیری از لیست شدن محتوای دایرکتوری‌ها
Options -Indexes

# تنظیمات امنیتی پایه
# جلوگیری از دسترسی مستقیم به فایل‌های حساس
<Files ".env">
    Require all denied
</Files>
<Files ".git">
    Require all denied
</Files>
<Files "composer.json">
    Require all denied
</Files>
<Files "composer.lock">
    Require all denied
</Files>
<Files "package.json">
    Require all denied
</Files>
<Files "package-lock.json">
    Require all denied
</Files>

# جلوگیری از دسترسی مستقیم به فایل‌های داخل پوشه includes
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^includes/ - [F,L]
    RewriteRule ^vendor/ - [F,L]
</IfModule>

# محافظت از فایل db_config.php به طور خاص (اگرچه RewriteRule بالا هم آن را پوشش می‌دهد)
<Files "db_config.php">
    Order Allow,Deny
    Deny from all
</Files>

# (اختیاری) حذف پسوند .php از URL ها
# برای فعال سازی این بخش، اطمینان حاصل کنید که mod_rewrite فعال است.
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteCond %{REQUEST_FILENAME}\.php -f
# RewriteRule ^(.*)$ $1.php [L]

# (اختیاری) ریدایرکت HTTP به HTTPS
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# تنظیمات مربوط به Charset برای جلوگیری از مشکلات احتمالی با کاراکترهای فارسی در URL یا نام فایل‌ها
# AddDefaultCharset UTF-8 # این مورد معمولا در تنظیمات اصلی سرور (httpd.conf یا php.ini) انجام می‌شود

# مدیریت خطاهای سفارشی (اختیاری)
# ErrorDocument 403 /error_pages/403.php
# ErrorDocument 404 /error_pages/404.php
# ErrorDocument 500 /error_pages/500.php

